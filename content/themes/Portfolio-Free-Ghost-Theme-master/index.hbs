{{!< default}}

{{! The main content area on the homepage }}
<main role="main" class="{{#if @blog.cover}} custom-bg{{else}} default-bg{{/if}}"{{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
    {{> menu}}
    <div class="main__wrapper">
        {{#foreach posts}}
        <article class="{{post_class}} card post__wrapper" data-cols="3">
            <div class="card-image"><img src = {{{imageUrl html}}}></div>
            <p>{{title}}</p>
        </article>
        {{/foreach}}
    </div>

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
</main>
