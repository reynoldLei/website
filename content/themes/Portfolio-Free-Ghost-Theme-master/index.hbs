{{!< default}}

{{! The main content area on the homepage }}
<main role="main" class="{{#if @blog.cover}} custom-bg{{else}} default-bg{{/if}}"{{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
    {{> menu}}
    <div class="wrapper">
        {{#foreach posts}}
        <article class="{{post_class}} card post__wrapper" data-cols="4">
            <div class="card-image">
                <a title="{{{title}}}" href = "{{url}}" target="_blank">
                    <img src = {{{imageUrl html}}} alt="{{{title}}}" />
                </a>
                <span class="commodity-price">{{{commodityPrice html}}}</span>
            </div>
            <div class="card-article">
                <a title="{{{title}}}" href = "{{url}}" target="_blank">{{title}}</a>
            </div>
        </article>
        {{/foreach}}
    </div>

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
</main>
